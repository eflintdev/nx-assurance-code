{
  "compilerOptions": {
    "rootDir": ".",
    "composite": true,
    "declarationMap": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "paths": {
      "@apps-shared": ["apps-shared/src/index.ts"],
      "@apps-shared/*": ["apps-shared/src/*"],
      "@apps-shared/lib/constants": ["apps-shared/src/lib/constants/index.ts"]
    }
  },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"],
}
