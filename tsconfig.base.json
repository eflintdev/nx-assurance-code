{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "rootDir": ".",
    "composite": false,
    "declarationMap": true,
    "importHelpers": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es2022",
    "paths": {
      "@/*": ["./src/*"],
      "@apps-shared": ["apps-shared/src/index.ts"],
      "@apps-shared/*": ["apps-shared/src/*"],
      "@apps-shared/lib/constants": ["apps-shared/src/lib/constants/index.ts"],
      "@apps-shared/lib/mocks": ["apps-shared/src/lib/mock/index.ts"],
      "@apps-shared/lib/mocks/header.mocks": ["apps-shared/src/lib/mocks/header.mocks.ts"],
      "@apps-shared/lib/mocks/footer.mocks": ["apps-shared/src/lib/mocks/footer.mocks.ts"],
      "@apps-shared/lib/types": ["apps-shared/src/lib/types/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
